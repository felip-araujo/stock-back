generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum user_profile {
  admin
  employee
}

model Companies {
  id          Int      @id @default(autoincrement())
  name        String   @unique       // pode ser usado para login junto com email
  type        String?
  representant String?
  rep_num     String?
  rep_email   String   @unique       // para login
  cnpj        String?  @unique
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
