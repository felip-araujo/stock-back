generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode      = "foreignKeys"
}

model User {
  id            Int               @id @default(autoincrement())
  name          String
  email         String            @unique
  password      String
  role          Role              @default(EMPLOYEE)
  companyId     Int
  inviteId      Int?
  departmentId  Int?
  createdAt     DateTime          @default(now())
  requests      MaterialRequest[] @relation("UserRequests")
  PasswordReset PasswordReset[]
  newRequests   Request[]         @relation("UserRequests")
  sales         Sale[]
  company       Company           @relation(fields: [companyId], references: [id], onDelete: Cascade)
  department    Department?       @relation(fields: [departmentId], references: [id], onDelete: SetNull)
  invite        InviteLink?       @relation("InviteLinkUsers", fields: [inviteId], references: [id], onDelete: SetNull)
  cancelamentos   Cancelamento[]   @relation("UserCancelamentos")

  @@index([companyId])
  @@index([departmentId])
}

model InviteLink {
  id           Int      @id @default(autoincrement())
  token        String   @unique
  companyId    Int
  role         Role     @default(EMPLOYEE)
  expiresAt    DateTime
  createdAt    DateTime @default(now())

  company      Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  invitedUsers User[]   @relation("InviteLinkUsers")

  @@index([companyId])
}

model Company {
  id           Int               @id @default(autoincrement())
  name         String            @unique
  cnpj         String            @unique
  representant String
  rep_email    String            @unique
  rep_num      String
  createdAt    DateTime          @default(now())
  departments  Department[]
  materials    Material[]
  requests     MaterialRequest[] @relation("CompanyRequests")
  products     Product[]
  newRequests  Request[]         @relation("CompanyRequests")
  sales        Sale[]
  subscription Subscription?
  users        User[]
  invitelink   InviteLink[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  stock       Int      @default(0)
  companyId   Int
  createdAt   DateTime @default(now())
  codigo      String?
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  sales       Sale[]

  @@index([companyId])
}

model Material {
  id           Int               @id @default(autoincrement())
  name         String
  description  String?
  group        String?
  companyId    Int
  createdAt    DateTime          @default(now())
  codigo       String?
  company      Company           @relation(fields: [companyId], references: [id], onDelete: Cascade)
  requests     MaterialRequest[] @relation("MaterialRequests")
  requestItems RequestItem[]     @relation("MaterialRequests")

  @@index([companyId])
}

model Request {
  id        Int           @id @default(autoincrement())
  userId    Int
  companyId Int
  status    String        @default("pending")
  createdAt DateTime      @default(now())
  company   Company       @relation("CompanyRequests", fields: [companyId], references: [id], onDelete: Cascade)
  user      User          @relation("UserRequests", fields: [userId], references: [id], onDelete: Cascade)
  items     RequestItem[]

  @@index([companyId])
  @@index([userId])
}

model RequestItem {
  id         Int      @id @default(autoincrement())
  requestId  Int
  materialId Int
  quantity   Int
  createdAt  DateTime @default(now())
  material   Material @relation("MaterialRequests", fields: [materialId], references: [id], onDelete: Cascade)
  request    Request  @relation(fields: [requestId], references: [id], onDelete: Cascade)

  @@unique([requestId, materialId])
  @@index([materialId])
}

model MaterialRequest {
  id         Int      @id @default(autoincrement())
  materialId Int
  userId     Int
  companyId  Int
  quantity   Int
  status     String   @default("pending")
  createdAt  DateTime @default(now())
  company    Company  @relation("CompanyRequests", fields: [companyId], references: [id], onDelete: Cascade)
  material   Material @relation("MaterialRequests", fields: [materialId], references: [id], onDelete: Cascade)
  user       User     @relation("UserRequests", fields: [userId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([materialId])
  @@index([userId])
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  userId    Int
  code      String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Subscription {
  id                   Int       @id @default(autoincrement())
  companyId            Int       @unique
  stripeSubscriptionId String?   @unique
  email                String?
  status               String
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  updatedAt            DateTime  @updatedAt
  plan                 String    @default("basic")
  isTrial              Boolean   @default(false)
  trialEndsAt          DateTime?
  company              Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
}

model Department {
  id        Int      @id @default(autoincrement())
  name      String
  companyId Int
  createdAt DateTime @default(now())
  company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  users     User[]

  @@unique([name, companyId])
  @@index([companyId])
}

model Sale {
  id           Int      @id @default(autoincrement())
  productId    Int
  userId       Int
  companyId    Int
  buyerName    String
  buyerCpfCnpj String
  buyerEmail   String?
  buyerPhone   String?
  quantity     Int
  totalPrice   Float
  createdAt    DateTime @default(now())
  company      Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  product      Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([productId])
  @@index([userId])
}

model Contato {
  id       Int      @id @default(autoincrement())
  nome     String
  email    String
  telefone String?
  mensagem String
  criadoEm DateTime @default(now())
}

model Cancelamento {
  id               Int      @id @default(autoincrement())
  userId           Int?
  motivo           String
  dataCancelamento DateTime @default(now())
  user             User?    @relation("UserCancelamentos", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}


model AnalyticsEvent {
  id          Int      @id @default(autoincrement())
  event       String
  page        String
  element     String?      // usado apenas para eventos de clique
  duration    Int?         // usado apenas quando o evento for "leave"
  timestamp   DateTime     @default(now())
  ipAddress   String?
  userAgent   String?
}

model AnalyticsClick {
  id        Int      @id @default(autoincrement())
  buttonId  String
  page      String?
  createdAt DateTime @default(now())
}


enum Role {
  SUPER_ADMIN
  COMPANY_ADMIN
  EMPLOYEE
}
